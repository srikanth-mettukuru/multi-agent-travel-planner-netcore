@model MultiAgentTravelPlanner.Web.Models.ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger text-center" role="alert">
                <h1 class="display-4">‚ùå</h1>
                <h2>Oops! Something went wrong</h2>
                <p class="lead">We apologize, but there was an error processing your travel request.</p>
                
                @if (Model?.ShowRequestId == true)
                {
                    <p class="small">
                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </p>
                }
                
                <hr>
                
                <div class="mt-3">
                    <a href="@Url.Action("Index", "Travel")" class="btn btn-primary">
                        <i class="bi bi-arrow-left"></i> Try Again
                    </a>
                </div>
                
                <div class="mt-4">
                    <p class="text-muted small">
                        If this problem persists, please contact support with the Request ID above.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>